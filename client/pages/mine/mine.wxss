/* pages/mine/mine.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.auth-text {
  font-size: 32rpx;
}

.auth-item {
  font-size: 24rpx;
  color: #666;
}

.auth-btn {
  margin-top: 100rpx;
}


.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-info-avatar {
  width: 256rpx;
  height: 256rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.user-info-nickname {
  color: #aaa;
}

.buttons {
  width: 100%;
  margin: 20rpx;
}

.btn {
  margin: 20rpx 0;
}
