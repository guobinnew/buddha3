/* pages/chinese/player/player.wxss */
.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx;
}

.title {
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
  font-size: 32rpx;
  text-align: center;
  height: 60rpx;
  width: 100%;
  padding: 10rpx;
  border-bottom: solid 1rpx #eee;
  background-color: #fff;
}

.control {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
}

.answer {
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.hidden {
  display: none;
}

.answer-text {
  font-size: 100rpx;
  line-height: 100rpx;
}

.progress {
  display: flex;
  flex-direction: column;
  margin-top: 100rpx;
  width: 100%;
  height: 100rpx;
  margin-bottom: 40rpx;
  border-bottom: solid 1rpx #eee;
}

.progress-text {
  width: 100%;
  text-align: center;
}

.speed {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 140rpx;
  line-height: 100rpx;
  width: 100%;
  border-bottom: solid 1rpx #eee;
}

.speed-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 94rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ebeef5;
  overflow: hidden;
  color: #303133;
  box-shadow: 0 2rpx 12rpx 0 rgba(0,0,0,.1);
  margin-top: 20rpx;
  width: 120rpx;
}

.speed-item-sel {
  background-color: #09bb07;
  color: #fff;
}

.speed-item-text {
  font-size: 32rpx;
  text-align: center;
}

.list {
  line-height: 60rpx;
}

.list-text {
  border: solid 1rpx #eee;
  font-size: 40rpx;
  margin: 20rpx 20rpx;
}