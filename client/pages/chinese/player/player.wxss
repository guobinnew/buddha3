/* pages/chinese/player/player.wxss */
.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx;
}

.title {
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
  font-size: 32rpx;
  text-align: center;
  height: 60rpx;
  width: 100%;
  padding: 10rpx;
  border-bottom: solid 1rpx #303133;
  background-color: #fff;
}

.control {

  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
}

.answer {
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.hidden {
  display: none;
}

.answer-text {
  font-size: 100rpx;
  line-height: 100rpx;
}

.progress {
  margin-top: 100rpx;
  width: 100%;
  height: 60rpx;
}